using System;
using System.Collections.Generic;
using System.Linq;
using System.Numerics;
using System.Text;
using System.Threading.Tasks;


class Program
{
    static void Main(string[] args)
    {
        int numbersOfOrers = int.Parse(Console.ReadLine());
        decimal pricePerCofe;
        decimal totalSum = 0;
        for (int i = 0; i < numbersOfOrers; i++)
        {
            decimal pricePerCapsule = decimal.Parse(Console.ReadLine());
            var date = Console.ReadLine().Split('/').Select(int.Parse).ToArray();
            int days = DateTime.DaysInMonth(date[2], date[1]);
            int capsulesCount = int.Parse(Console.ReadLine());
            pricePerCofe = (decimal)((days * capsulesCount) * pricePerCapsule);
            totalSum += pricePerCofe;
            Console.WriteLine("The price for the coffee is: ${0:F2}", pricePerCofe);
        }

        Console.WriteLine("Total: ${0:F2}", totalSum);
    }
}

